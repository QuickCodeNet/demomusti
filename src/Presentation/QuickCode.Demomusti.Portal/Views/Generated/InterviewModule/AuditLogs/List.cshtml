@using QuickCode.Demomusti.Portal.Models.InterviewModule
@model InterviewModule.AuditLogData
@{
    string title =  "InterviewModule.AuditLog List".SplitCamelCaseToString();
    string headerKey = "Header";
    TempData["Title"] = title;
    int startIndex = ((Model.CurrentPage - 1) * Model.PageSize) + 1;
    int endIndex = ((Model.CurrentPage ) * Model.PageSize);
    if (endIndex > Model.NumberOfRecord) {
        endIndex = Model.NumberOfRecord;
    }

    var pagerData = new PagerData() { CurrentPage = Model.CurrentPage, NumberOfRecord = Model.NumberOfRecord, PageSize = Model.PageSize, TotalPage = Model.TotalPage, StartIndex = startIndex, EndIndex = endIndex } ;
}
<div class="container-fluid" IsPageAvailable="true">
    <form method="post" id="formList">
        <div class="card text shadow mb-4">
            
            <div class="card-body">
                <h1 class="card-title">@title</h1>
                <p class="card-text">You can manage your InterviewModule.AuditLog table.</p>
                <vc:insert-button controller-name="" action-name=""></vc:insert-button>
                <hr class="col-xs-12">
                 @if (Model.List.Count == 0)
                {
                    <div class="alert alert-danger" role="alert">
                        No Data available in InterviewModule.AuditLog table.
                    </div>
                }
                else
                {
                    <vc:pager pager-data=pagerData></vc:pager>
                    <table bc-border="Bordered" bc-striped="true" bc-hover="true" class="table-responsive" bc-theme="Light">
                        <thead bc-theme="Dark">
                            <tr>
                               <vc:operation-buttons item-id=@headerKey controller-name="" action-name=""></vc:operation-buttons>
                               <th>Entity Name</th>
<th>Entity Id</th>
<th>Action</th>
<th>User Id</th>
<th>User Name</th>
<th>User Group</th>
<th>Timestamp</th>
<th>Old Values</th>
<th>New Values</th>
<th>Changed Columns</th>
<th>Is Changed</th>
<th>Change Summary</th>
<th>Ip Address</th>
<th>User Agent</th>
<th>Correlation Id</th>
<th>Is Success</th>
<th>Error Message</th>
<th>Hash</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.List)
                            {
                            <tr>
                                <vc:operation-buttons item-id=@item.GetKey() controller-name="" action-name=""></vc:operation-buttons>
                                <td>@item.EntityName</td>
<td>@item.EntityId</td>
<td>@item.Action</td>
<td>@item.UserId</td>
<td>@item.UserName</td>
<td>@item.UserGroup</td>
<td>@item.Timestamp</td>
<td>@item.OldValues</td>
<td>@item.NewValues</td>
<td>@item.ChangedColumns</td>
<td>@if (@item.IsChanged == true)                                                                                                            
{                                                                                                                                      
<div class="ios-switch-wrapper ">
	<input class="ios-switch" type="checkbox" onchange="checkBoxChanged(this);" id=@string.Format($"cbox_item.IsChanged") checked disabled /> 
</div>
}                                                                                                                                      
else                                                                                                                                   
{                                                                                                                                      
<div class="ios-switch-wrapper ">
	<input class="ios-switch" type="checkbox" onchange="checkBoxChanged(this);" id=@string.Format($"cbox_item_IsChanged") disabled/>
</div>
}
</td>
<td>@item.ChangeSummary</td>
<td>@item.IpAddress</td>
<td>@item.UserAgent</td>
<td>@item.CorrelationId</td>
<td>@if (@item.IsSuccess == true)                                                                                                            
{                                                                                                                                      
<div class="ios-switch-wrapper ">
	<input class="ios-switch" type="checkbox" onchange="checkBoxChanged(this);" id=@string.Format($"cbox_item.IsSuccess") checked disabled /> 
</div>
}                                                                                                                                      
else                                                                                                                                   
{                                                                                                                                      
<div class="ios-switch-wrapper ">
	<input class="ios-switch" type="checkbox" onchange="checkBoxChanged(this);" id=@string.Format($"cbox_item_IsSuccess") disabled/>
</div>
}
</td>
<td>@item.ErrorMessage</td>
<td>@item.Hash</td>

                               </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
            @if (Model.List.Count > 0)
            {
            <div class="card-footer text-muted">
                 <vc:pager pager-data=pagerData></vc:pager>
            </div>
            }
        </div>
        <input type="hidden" asp-for="CurrentPage" />
        <input type="hidden" asp-for="SelectedKey" />
    </form>

    <div class="modal fade bd-example-modal-lg" id="itemDetailsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document" id="itemDetailsContainer">
        </div>
    </div>
    
</div>
<div class="container-fluid" IsPageAvailable="false">
 @await Html.PartialAsync("_NotAuthorized")
</div>

<script type="text/javascript">
    window.addEventListener('load', (event) => {
     $("img.lazyload").lazyload();
    });
</script>

