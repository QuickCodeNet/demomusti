@using QuickCode.Demomusti.Portal.Models.InterviewModule
@model InterviewModule.InterviewerData
@{
    string title =  "InterviewModule.Interviewer List".SplitCamelCaseToString();
    string headerKey = "Header";
    TempData["Title"] = title;
    int startIndex = ((Model.CurrentPage - 1) * Model.PageSize) + 1;
    int endIndex = ((Model.CurrentPage ) * Model.PageSize);
    if (endIndex > Model.NumberOfRecord) {
        endIndex = Model.NumberOfRecord;
    }

    var pagerData = new PagerData() { CurrentPage = Model.CurrentPage, NumberOfRecord = Model.NumberOfRecord, PageSize = Model.PageSize, TotalPage = Model.TotalPage, StartIndex = startIndex, EndIndex = endIndex } ;
}
<div class="container-fluid" IsPageAvailable="true">
    <form method="post" id="formList">
        <div class="card text shadow mb-4">
            
            <div class="card-body">
                <h1 class="card-title">@title</h1>
                <p class="card-text">You can manage your InterviewModule.Interviewer table.</p>
                <vc:insert-button controller-name="" action-name=""></vc:insert-button>
                <hr class="col-xs-12">
                 @if (Model.List.Count == 0)
                {
                    <div class="alert alert-danger" role="alert">
                        No Data available in InterviewModule.Interviewer table.
                    </div>
                }
                else
                {
                    <vc:pager pager-data=pagerData></vc:pager>
                    <table bc-border="Bordered" bc-striped="true" bc-hover="true" class="table-responsive" bc-theme="Light">
                        <thead bc-theme="Dark">
                            <tr>
                               <vc:operation-buttons item-id=@headerKey controller-name="" action-name=""></vc:operation-buttons>
                               <th>Id</th>
<th>First Name</th>
<th>Last Name</th>
<th>Email</th>
<th>Phone Number</th>
<th>Department</th>
<th>Avatar</th>
<th>Is Active</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.List)
                            {
                            <tr>
                                <vc:operation-buttons item-id=@item.GetKey() controller-name="" action-name=""></vc:operation-buttons>
                                <td>@item.Id</td>
<td>@item.FirstName</td>
<td>@item.LastName</td>
<td>@item.Email</td>
<td>@item.PhoneNumber</td>
<td>@item.Department</td>
<td><a href="@(item.Avatar == null || item.Avatar.Length == 0 ? "/images/no_image.png" : item.Avatar)" data-toggle="lightbox" data-type="image" style="display: flex;">
   <img class="lazyload img-fluid" src="/images/loading.svg" data-src="@(item.Avatar == null || item.Avatar.Length == 0 ? "/images/no_image.png" : item.Avatar)" style="height:auto;  width:auto; max-height: 110px; max-width: 110px;display: block;margin-left: auto;margin-right: auto;" bc-thumbnail="true" bc-round="true" />
</a>
</td>
<td>@if (@item.IsActive == true)                                                                                                            
{                                                                                                                                      
<div class="ios-switch-wrapper ">
	<input class="ios-switch" type="checkbox" onchange="checkBoxChanged(this);" id=@string.Format($"cbox_item.IsActive") checked disabled /> 
</div>
}                                                                                                                                      
else                                                                                                                                   
{                                                                                                                                      
<div class="ios-switch-wrapper ">
	<input class="ios-switch" type="checkbox" onchange="checkBoxChanged(this);" id=@string.Format($"cbox_item_IsActive") disabled/>
</div>
}
</td>

                               </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
            @if (Model.List.Count > 0)
            {
            <div class="card-footer text-muted">
                 <vc:pager pager-data=pagerData></vc:pager>
            </div>
            }
        </div>
        <input type="hidden" asp-for="CurrentPage" />
        <input type="hidden" asp-for="SelectedKey" />
    </form>

    <div class="modal fade bd-example-modal-lg" id="itemDetailsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document" id="itemDetailsContainer">
        </div>
    </div>
    
</div>
<div class="container-fluid" IsPageAvailable="false">
 @await Html.PartialAsync("_NotAuthorized")
</div>

<script type="text/javascript">
    window.addEventListener('load', (event) => {
     $("img.lazyload").lazyload();
    });
</script>

